<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_sky_blue"
    tools:context=".SignupEmailFragment">

    <TextView
        android:id="@+id/signup_email_fragment_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin_18dp"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/poppins"
        android:gravity="top"
        android:text="@string/sign_up_email_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_9dp"
        android:text="@string/sign_up_email_description"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_email_fragment_title_text_view" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/deep_sky_blue"
        tools:context=".fragments.authentication.SignupEmailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/email_sign_up_fragment_create_an_account_text_view"
                android:layout_width="@dimen/layout_height_or_width_0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="@dimen/margin_44dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="top"
                android:text="@string/email_sign_up_fragment_create_account_text"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lineHeight="@dimen/line_height_27sp" />

            <TextView
                android:id="@+id/email_sign_up_fragment_description_text_view"
                android:layout_width="@dimen/layout_height_or_width_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/email_sign_up_fragment_lets_get_to_know_you_text"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp"
                app:layout_constraintEnd_toEndOf="@+id/email_sign_up_fragment_create_an_account_text_view"
                app:layout_constraintStart_toStartOf="@+id/email_sign_up_fragment_create_an_account_text_view"
                app:layout_constraintTop_toBottomOf="@+id/email_sign_up_fragment_create_an_account_text_view" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_sign_up_fragment_firstname_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="18dp"
                android:hint="@string/email_sign_up_fragment_firstname_hint_text"
                android:textColorHint="@color/white"
                app:boxBackgroundColor="@color/deep_sky_blue"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="@color/white"
                app:boxStrokeErrorColor="@color/error"
                app:errorIconTint="@color/grey"
                app:errorTextColor="@color/grey"
                app:hintTextColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/email_sign_up_fragment_description_text_view"
                app:layout_constraintStart_toStartOf="@+id/email_sign_up_fragment_description_text_view"
                app:layout_constraintTop_toBottomOf="@+id/email_sign_up_fragment_description_text_view"
                app:placeholderTextColor="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_sign_up_fragment_firstname_text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/deep_sky_blue"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="@dimen/padding_0dp"
                    android:textColor="@color/white"
                    android:textCursorDrawable="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_sign_up_fragment_lastname_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_18dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="@dimen/margin_18dp"
                android:hint="@string/email_sign_up_fragment_lastname_hint_text"
                android:textColorHint="@android:color/white"
                app:boxStrokeColor="@color/white"
                app:boxStrokeErrorColor="@color/error"
                app:endIconTint="@color/error"
                app:errorContentDescription="@string/sign_up_email_edit_texts__error_message"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/ic_outline_error_24"
                app:errorIconTint="@color/grey"
                app:errorTextColor="@color/grey"
                app:hintTextColor="@color/white"
                app:boxBackgroundMode="filled"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_sign_up_fragment_firstname_text_input_layout"
                app:placeholderTextColor="@color/grey">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_sign_up_fragment_lastname_text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/deep_sky_blue"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="@dimen/padding_0dp"
                    android:textColor="@color/white"
                    android:textCursorDrawable="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_sign_up_fragment_other_name_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_18dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_18dp"
                android:hint="@string/email_sign_up_fragment_other_name_hint_text"
                android:textColorHint="@color/white"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="@color/white"
                app:boxStrokeErrorColor="@color/error"
                app:errorContentDescription="@string/sign_up_email_edit_texts__error_message"
                app:errorTextColor="@color/error"
                app:hintTextColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_sign_up_fragment_lastname_text_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_sign_up_fragment_other_name_text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/deep_sky_blue"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="@dimen/padding_0dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_sign_up_fragment_email_address_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_18dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_18dp"
                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/white"
                app:boxStrokeErrorColor="@color/error"
                app:errorEnabled="true"
                app:errorIconTint="@color/grey"
                app:errorTextColor="@color/grey"
                app:hintTextColor="@color/white"
                app:boxBackgroundMode="filled"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_sign_up_fragment_account_category_text_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_sign_up_fragment_email_address_text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@color/deep_sky_blue"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="@string/email_sign_up_fragment_email_address_hint_text"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/padding_0dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_sign_up_fragment_account_category_text_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_18dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins"
                app:boxStrokeColor="@color/white"
                app:boxStrokeErrorColor="@color/error"
                app:errorIconTint="@color/grey"
                app:errorTextColor="@color/grey"
                app:hintTextColor="@color/white"
                app:boxBackgroundMode="filled"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_sign_up_fragment_other_name_text_input_layout">


                <AutoCompleteTextView
                    android:id="@+id/email_sign_up_fragment_account_category_auto_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:backgroundTint="@color/deep_sky_blue"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="none"
                    android:paddingStart="@dimen/padding_0dp"
                    android:paddingBottom="@dimen/margin_18dp"
                    android:text="@string/email_sign_up_fragment_choose_account_category_text"
                    android:textColor="@color/white" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_sign_up_fragment_password_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_18dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_18dp"
                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/white"
                app:boxStrokeErrorColor="@color/error"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/grey"
                app:errorContentDescription="@string/sign_up_email_confirm_password__error_message"
                app:errorIconTint="@color/grey"
                app:errorTextColor="@color/grey"
                app:hintTextColor="@color/white"
                app:boxBackgroundMode="filled"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_sign_up_fragment_email_address_text_input_layout"
                app:passwordToggleEnabled="true">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_sign_up_fragment_password_text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/deep_sky_blue"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="@string/email_sign_up_fragment_password_hint_text"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/padding_0dp"
                    android:textCursorDrawable="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_sign_up_fragment_confirm_password_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_18dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_18dp"
                android:backgroundTint="@color/white"
                android:hint="@string/email_sign_up_fragment_confirm_password_hint_text"
                android:textColorHint="@color/white"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                app:boxStrokeErrorColor="@color/error"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/grey"
                app:errorContentDescription="@string/sign_up_email_confirm_password__error_message"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_sign_up_fragment_password_text_input_layout"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_sign_up_fragment_confirm_password_text_input_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/deep_sky_blue"
                    android:fontFamily="@font/roboto_medium"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/padding_0dp"
                    android:textColor="@color/white"
                    android:textCursorDrawable="@color/white">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/email_sign_up_fragment_sign_up_button"
                android:layout_width="@dimen/layout_height_or_width_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_18dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="@dimen/margin_18dp"
                android:height="@dimen/layout_height_or_width_60dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/email_sign_up_fragment_sign_up_button_text"
                android:textAllCaps="false"
                android:textColor="@color/deep_sky_blue"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/corner_radius_5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_sign_up_fragment_confirm_password_text_input_layout" />


            <TextView
                android:id="@+id/email_sign_up_fragment_already_have_an_account_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:fontFamily="@font/poppins"
                android:text="@string/email_sign_up_fragment_login_textview_text"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/email_sign_up_fragment_login_text_view"
                app:layout_constraintEnd_toEndOf="@+id/email_sign_up_fragment_sign_up_button"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/email_sign_up_fragment_login_text_view" />

            <TextView
                android:id="@+id/email_sign_up_fragment_login_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/email_sign_up_fragment_already_have_an_account_text"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/email_sign_up_fragment_sign_up_button"
                app:layout_constraintStart_toStartOf="@+id/email_sign_up_fragment_sign_up_button"
                app:layout_constraintTop_toBottomOf="@+id/email_sign_up_fragment_sign_up_button"
                app:layout_constraintVertical_bias="0.14999998" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>